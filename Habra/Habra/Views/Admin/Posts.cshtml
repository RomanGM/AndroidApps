@model IEnumerable<DataLayer.Models.Manual>
@{
    ViewData["Title"] = "Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default" style="margin-top:-2%">
    <div class="panel-heading">
        <h3 style="color:black">Posts</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Name</th>
                <th class="text-center">Theme</th>
                <th class="text-center">Synopsis</th>
                <th class="text-center">Date</th>
                <th class="text-center">Owner</th>
                <th class="text-center">Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ManualId</td>
                    <td>@Html.ActionLink( item.Name, "ShowPost", "Wall", new { @id = item.ManualId } )</td>
                    @if (item.Theme != null)
                    {
                        <td>@Html.ActionLink( item.Theme.Name, "ShowPost", "Wall", new { @id = item.ManualId } )</td>
                    }
                    else
                    {
                        <td>Empty</td>
                    }
                    <td>@Html.ActionLink( item.Synopsis, "ShowPost", "Wall", new { @id = item.ManualId } )</td>
                    <td>@Html.ActionLink( item.Date.ToShortDateString(), "GetByTime", new { @date = item.Date } )</td>
                    <td>@Html.ActionLink( item.OwnerId, "GetUserPosts", new { @id = item.OwnerId } )</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="~/Admin/DeletePost?id=@item.ManualId">Delete</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        type="text/javascript"></script>