@model IEnumerable<DataLayer.Models.ApplicationUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 style="color:black">Posts</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-left">ID</th>
                <th>Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">EmailConfirmed</th>
                <th class="text-center">Posts</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.EmailConfirmed</td>
                    <td>@Html.ActionLink( "Posts", "GetUserPosts", new { @id = item.Id } )</td>
                    <td class="text-center">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">

                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a href="~/Admin/GetUserPosts?id=@item.Id">Posts</a></li>
                                <li><a href="~/Admin/BlockUser?id=@item.Id">Block</a></li>
                                <li><a href="~/Admin/CreateAdmin?id=@item.Id">Admin</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        type="text/javascript"></script>